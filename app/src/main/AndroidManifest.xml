<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.xiaojie.gomoku">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".app.gomokuApplication"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity">
        </activity>

        <activity android:name=".ui.SplashActivity" android:theme="@style/AppTheme.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.DoublePlayActivity"/>
        <activity android:name=".ui.NetWorkingPlayActivity"/>
    </application>

</manifest>